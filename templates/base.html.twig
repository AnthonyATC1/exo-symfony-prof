<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="/css/login.css">

    {% block stylesheets %}{% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>

<body>

{% set filter = app.session.get('filter') %}

{% if filter != null %}
    {% set idRole = filter['idRole'] %}
    {% set idUser = filter['idUser'] %}
    {% set username = filter['username'] %}
{% endif %}

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">

        <a class="navbar-brand" href="/">eCommerce</a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarColor01">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">

            <!-- MENU GAUCHE -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('test', {'name':'Anthony'}) }}">Test</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Créer un article</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"
                       href="#"
                       role="button"
                       data-bs-toggle="dropdown">
                        Dropdown
                    </a>

                    <ul class="dropdown-menu">

                        {% if idRole is defined and idRole == 1 %}
                            <li>
                                <a class="dropdown-item" href="{{ path('account') }}">Créer un utilisateur</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        {% endif %}

                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Separated link</a></li>

                    </ul>
                </li>
            </ul>

            <!-- MENU LOGIN / USER -->
            {% if username is not defined %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle"
                                data-bs-toggle="dropdown">
                            Login
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end mt-2 p-3">
                            <li>
                                <form method="post" action="{{ path('login') }}">
                                    <div class="mb-2">
                                        <input class="form-control form-control-sm"
                                               type="text"
                                               name="username"
                                               placeholder="username"
                                               required>
                                    </div>

                                    <div class="mb-2">
                                        <input class="form-control form-control-sm"
                                               type="password"
                                               name="password"
                                               placeholder="password"
                                               required>
                                    </div>

                                    <button class="btn btn-primary w-100" type="submit">
                                        Login
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           data-bs-toggle="dropdown">
                            Bienvenue {{ username }}
                        </a>

                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="{{ path('account-edit', {'id': idUser}) }}">Mon compte</a>


                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    </li>
                </ul>
            {% endif %}

        </div>
    </div>
</nav>

{% block body %}
{% endblock %}

</body>
</html>
